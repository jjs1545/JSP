@charset "EUC-KR";
 /* header.css */
 
  body{
	background-color : white;/* #148feb; */
} 

label {
    /* To make sure that all label have the same size and are properly align */
    display: inline-block;
    width: 80px;
    text-align: right;
}

.header{
	 /* The image used */
    background-image: url("/img/plane.jpg");
    min-height: 500px;
    /* Center and scale the image nicely */
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}

.container {
	position : relative;
	margin: 0 auto;
    width: 500px; height : 300px;
    right : 400px; 
    /* To see the outline of the form */
    padding: 1em;
    border: 2px solid #ffffff;
    border-radius: 2em;	
}

input[type=text]{
    width: 60%;
    padding: 15px;
    margin: 5px 0 22px 0;
    border: none;
    background: #f1f1f1;
}
input[type=text]:focus{
    background-color:#ddd;
    outline: none;
}

input[type=date]{
	width: 60%;
    padding: 15px;
    margin: 5px 0 22px 0;
    border: none;
    background: #f1f1f1;
}
select{
	width: 50%;
	padding : 12px;
	border: 1px solid #ccc;
    border-radius: 4px;
	resize: vertical;
}

.btn {
	position :relative;
	margin : 0;
	left : 370px; bottom :30px;
    background-color: #666666;
    color: white;
    padding: 10px 10px;
    border: medium;
    width: 20%;
    text-align: center;
    border-radius: 10px;
}
   
.btn:hover {
    opacity: 0.5;
}

#logo{
	color : black;
	text-align: center;
	position : relative;
	top : 20px;
}



.list1{
	text-align: right;
	position : relative;
	margin-right: 30px; 
}

.list1 button{
	background-color: transparent;
    text-decoration: none;
    cursor: pointer;
	border : 0;
	outline : 0;
	position : relative;
	font-size: 12pt;
	font-weight: bolder;
}
 